<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:divider="@drawable/divider_inset_10"
    android:orientation="vertical"
    android:showDividers="middle">

    <Button
        android:id="@+id/btn_invoke_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="拍摄照片" />

    <Button
        android:id="@+id/btn_invoke_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="选照片" />

    <Button
        android:id="@+id/btn_invoke_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="录制视频" />

    <Button
        android:id="@+id/btn_invoke_v_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="选视频" />

    <Button
        android:id="@+id/btn_invoke_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="录制音频" />

    <Button
        android:id="@+id/btn_invoke_a_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="选音频" />

    <Button
        android:id="@+id/btn_invoke_f_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="选文件" />

    <Button
        android:id="@+id/btn_invoke_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="关闭" />
</LinearLayout>