<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ui_color_white">

        <TextView
            android:id="@+id/tv_app_logo_left"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:text="争"
            android:textColor="@color/ui_color_315B6C"

            android:textSize="@dimen/ui_font_36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_splash_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <ImageView
            android:id="@id/iv_splash_logo"
            android:layout_width="@dimen/ui_space_96"
            android:layout_height="@dimen/ui_space_54"
            android:src="@drawable/act_splash_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_app_logo_left"
            app:layout_constraintRight_toLeftOf="@+id/tv_app_logo_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@id/tv_app_logo_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_space_54"
            android:text="鸣"
            android:textColor="@color/ui_color_315B6C"
            android:textSize="@dimen/ui_font_36"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_app_logo_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_splash_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="争鸣信息技术有限公司"
            android:textColor="@color/ui_color_black"
            android:textSize="@dimen/ui_font_14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>